{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn -w 4 -b 0.0.0.0:$PORT --timeout 120 --keep-alive 5 --access-logfile - --error-logfile - wsgi:app",
    "healthchecks": {
      "checks": [
        {
          "type": "HTTP",
          "path": "/health",
          "interval": 10,
          "timeout": 5
        }
      ]
    }
  }
}
